<div class="container-fluid listing-grid">
    <% @listings.each do |listing| %>
        <% if params[:search] %>
            <div class="listing">
                <%= tag.h3 truncate(listing.name) %>
                <%= tag.h6 listing.summary %>
        <% end %>
                <% if listing.images.attached? %>
                    <%= link_to (image_tag set_image(listing.images.first, 400),
                    class: class_value(listing)), listing_path(listing) %>
                <% else %>
                    <%= link_to (image_tag user_avatar(User.find(listing.user_id), 400),
                    class: class_value(listing)), listing_path(listing) %>
                <% end %>
        <% if params[:search] %>
                <%= tag.h6 listing.at_time %>
            </div>
        <% end %>
    <% end %>
</div>